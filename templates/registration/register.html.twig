{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container containerForm">

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'loginForm'}}) }}
        <h1>S'inscrire</h1>
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form mt-3', 'placeholder':'Email'}}) }}
        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control form mt-3', 'placeholder':'Nom'}}) }}
        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control form mt-3', 'placeholder':'Pr√©nom'}}) }}
        {{ form_widget(registrationForm.plainPassword, {
            label: 'Password', 'attr': {'class': 'form-control form mt-3', 'placeholder':'Mot de passe'}}) }}
        {{ form_row(registrationForm.agreeTerms, {'label': "Veuillez accepter les conditions d'utilisation"}) }}

        <button type="submit" class="btn btn-lg btn-primary mt-4">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
